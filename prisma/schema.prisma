generator client {
  provider = "prisma-client-js"
}

enum PlanType {
  pro
  master
  starter
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}
model User {
  USER_ID           Int      @id @default(autoincrement())
  FIRST_NAME    String
  LAST_NAME     String
  EMAIL        String   @unique
  PASSWORD String
  CREATED_AT DateTime @default(now())
  UPDATED_AT    DateTime @updatedAt
}

model Distributor {
  DISTRIBUTOR_ID              Int      @id @default(autoincrement())
  PLAN_TYPE PlanType
  ADDRESS         String
  REGION          String
  POSTAL_CODE      String
  LONGITUDE       Float
  LATITUDE        Float
  WHATSAPP_NUMBER  String
  PHONE_NUMBER     String
  EMAIL    String
  FIRST_NAME String
  LAST_NAME  String
  CREATED_AT       DateTime @default(now())
  UPDATED_AT       DateTime @updatedAt

  @@index([REGION], name: "IDX_DISTRIBUTOR_REGION")
  @@index([POSTAL_CODE], name: "IDX_DISTRIBUTOR_POSTAL_CODE")
  @@index([LATITUDE, LONGITUDE], name: "IDX_DISTRIBUTOR_LATITUDE_LONGITUDE")
}
